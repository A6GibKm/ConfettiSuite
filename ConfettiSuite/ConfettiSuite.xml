<Ui xmlns="http://www.blizzard.com/wow/ui/"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

  <Frame name="Confetti_ArtFrame" parent="Confetti_MainFrame" hidden="true">
    <Size>
      <RelDimension x="1" y="1"/>
    </Size>
    <Anchors>
      <Anchor point="CENTER" relativePoint="CENTER"
      relativeTo="UIParent" />
    </Anchors>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture file="Interface\AddOns\ConfettiSuite\confetti.tga">
          <Anchors>
            <Anchor point= "CENTER" />
          </Anchors>
        </Texture>
      </Layer>
      <Layer level="BORDER">
        <FontString name="Confetti_ArtFrame_Text"
          outline="NORMAL" font="Fonts\FRIZQT__.TTF">
          <Color r="1" g="1" b="0" a="1"/>
          <FontHeight val="38"/>
          <Anchors>
            <Anchor point= "CENTER" relativePoint="CENTER" relativeTo="UIParent" />
          </Anchors>
        </FontString>
      </Layer>
    </Layers>

    <Scripts>
      <OnShow function="Confetti_ArtFrame_OnShow"/>
    </Scripts>

  </Frame>

</Ui>
